<%= form_with(model: [:admin, @badge], local: true) do |form| %>
  <%= render 'shared/errors', resource: @badge %>


  <p>
    <%= form.label :title %><br>
    <%= form.select :title, rule_names %>
  </p>

  <p>
		<%= form.label :rule %><br>
		<%= form.text_field :rule, id:  :badge_rule %>
	</p>

  <p>
		<%= form.label :image_url %><br>
		<%= form.text_field :image_url, id:  :badge_image_url%>
	</p>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
