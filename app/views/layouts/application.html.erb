<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if user_signed_in? %>
    <p class="nav user"> Welcome, <b><%= current_user.email %> </b> Guru</p>
    <p class="logout"> <%= link_to 'Logout', destroy_user_session_path, method: :delete %> </p>
    <p class="nav main"> <%= link_to 'TestGuru', root_path %> </p>
    <% end %>
    <%= render 'shared/flash' %>
    <%= yield %>
  <%= render 'layouts/footer' %>
  </body>

</html>
